{
  "name": "habit",
  "private": true,
  "scripts": {
      "postinstall": "node scripts/fix-hooks.mjs",
      "lint": "npx lint-staged --verbose",
      "fmt": "npx prettier --write .",
      "hooks:fix": "node scripts/fix-hooks.mjs"
  },
  "devDependencies": {
      "husky": "^9.1.7",
      "lint-staged": "^16.2.6",
      "prettier": "^3.6.2"
  },
  "lint-staged": {
    "hmc-frontend/**/*.{js,jsx,ts,tsx,json,css,md}": [
        "npx eslint --fix --config hmc-frontend/eslint.config.js"
    ],
    "hostel-frontend/**/*.{js,jsx,ts,tsx,json,css,md}": [
        "npx eslint --fix --config hostel-frontend/eslint.config.js"
    ],
    "login-frontend/**/*.{js,jsx,ts,tsx,json,css,md}": [
        "npx eslint --fix --config login-frontend/eslint.config.js"
    ],
    "smc-frontend/**/*.{js,jsx,ts,tsx,json,css,md}": [
        "npx eslint --fix --config smc-frontend/eslint.config.js"
    ],
    "server/**/*.{js,jsx,ts,tsx,json,css,md}": [
        "npx eslint --fix --config server/eslint.config.js"
    ],
    "frontend2/**/*.{dart,yaml}": [
        "dart format ./frontend2"
    ]
  }
}
